{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Client",
            "command": "xbuild",
            "type": "process",
            "args": [
                "${workspaceFolder}/Example/Example.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Client",
            "command": "mono",
            "type": "process",
            "args": [
                "${workspaceFolder}/Example/bin/Debug/Example.exe"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}